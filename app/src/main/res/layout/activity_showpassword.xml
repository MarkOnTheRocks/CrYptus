<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Site:"
        android:id="@+id/textViewSite"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email/Username"
        android:id="@+id/textViewEmail"
        android:inputType="textEmailAddress"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textViewSite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSite"
        android:layout_weight="0.45"
        android:layout_above="@+id/textViewEmail"
        android:layout_toRightOf="@+id/textViewSite"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/editTextEmail"
        android:layout_alignBottom="@+id/textViewEmail"
        android:layout_toRightOf="@+id/textViewEmail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date:"
        android:id="@+id/textViewDate"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textViewEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDate"
        android:layout_alignBottom="@+id/textViewDate"
        android:layout_alignRight="@+id/editTextEmail"
        android:layout_alignEnd="@+id/editTextEmail"
        android:layout_toEndOf="@+id/textViewDate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAlg"
        android:layout_alignBottom="@+id/textViewAlg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textViewAlg"
        android:layout_toEndOf="@+id/textViewAlg" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPassword"
        android:layout_alignBottom="@+id/textViewPass"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textViewPass"
        android:layout_toEndOf="@+id/textViewPass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="run"
        android:text="@string/save"
        android:id="@+id/button1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHA384"
        android:id="@+id/radioButton8"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CaesarCode"
        android:id="@+id/radioButton10"
        android:layout_below="@+id/radioButton8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let me do this for you"
        android:id="@+id/radioButton12"
        android:layout_below="@+id/radioButton10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Choose the length of your desired password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewInstrSeek"
        android:layout_above="@+id/button1"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Written by user"
        android:id="@+id/radioButton13"
        android:layout_below="@+id/radioButton11"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHA256"
        android:id="@+id/radioButton7"
        android:layout_above="@+id/radioButton8"
        android:layout_alignStart="@+id/radioButton11" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MD2"
        android:id="@+id/radioButton9"
        android:layout_below="@+id/radioButton7"
        android:layout_alignStart="@+id/radioButton11" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MD5"
        android:id="@+id/radioButton11"
        android:layout_below="@+id/radioButton9"
        android:layout_alignStart="@+id/radioButton13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Alg:"
        android:id="@+id/textViewAlg"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textViewDate"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password:"
        android:id="@+id/textViewPass"
        android:layout_below="@+id/editTextAlg"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHA1"
        android:id="@+id/radioButton"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textViewPass"
        android:layout_alignParentStart="true" />

    <SeekBar
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="64"
        android:progress="1"
        android:id="@+id/seekBar"
        android:layout_below="@+id/radioButton12"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>